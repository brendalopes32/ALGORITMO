Algoritmo "exe015"

Var
   DT,Salario: inteiro
Inicio
   Escreva("Informe o total de dias trabalhados no mês: ")
   Leia(DT)
   Salario <- (25*8)*DT
   Escreva("De acordo com os dias trabalhados (levando em cosideração que foram trabalhadas 8h por dia e que o valor da hora é R$25.00), o valor do salário será de R$",Salario)
Fimalgoritmo